<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>cz.cvut.kbss</groupId>
	<artifactId>owl2query</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>jar</packaging>

	<name>owl2query</name>
	<description>SPARQL-DL^NOT query engine for OWL 2</description>
	<url>http://owl2query.sourceforge.net</url>

	<repositories>
		<repository>
			<id>krizik</id>
			<url>http://krizik.felk.cvut.cz/m2repo</url>
		</repository>
		<repository>
			<id>jena</id>
			<url>http://repo1.maven.org/maven2/com/hp/hpl/</url>
		</repository>
	</repositories>

	<dependencies>
		<dependency>
			<groupId>org.semanticweb</groupId>
			<artifactId>owlapi</artifactId>
			<version>3.1.0</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>com.hp.hpl.jena</groupId>
			<artifactId>arq</artifactId>
			<version>2.8.7</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>
	</dependencies>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<scm>
		<connection>scm:https://krizik.felk.cvut.cz/km/owl2query/svn/owl2query/trunk</connection>
		<developerConnection>Petr KÅ™emen</developerConnection>
		<url>https://krizik.felk.cvut.cz/km/owl2query/svn/owl2query/trunk</url>
	</scm>
	<organization>
		<name>Czech Technical University in Prague, Knowledge Based and Systems Group</name>
		<url>http://krizik.felk.cvut.cz</url>
	</organization>
	<build>
		<resources>
			<resource>
				<directory>resources</directory>
			</resource>
		</resources>
		<sourceDirectory>.</sourceDirectory>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<includes>
						<include>src-api/**/*.java</include>
						<include>src-engine/**/*.java</include>
						<include>src-owlapi/**/*.java</include>
					</includes>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<modules>
	</modules>
</project>
